<odoo>
<record id="view_pos_order_form_inherit_mrp" model="ir.ui.view">
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
            <button name="open_related_mos" 
                    type="object" 
                    class="oe_stat_button" 
                    icon="fa-wrench">
                <div class="o_field_widget o_stat_info">
                    <span class="o_stat_text">Manufacturing</span>
                </div>
            </button>
        </xpath>
    </field>
</record>

  <record id="action_pos_order_related_mos" model="ir.actions.act_window">
    <field name="name">Manufacturing Orders</field>
    <field name="res_model">mrp.production</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[("origin", "=", context.get("default_origin"))]</field>
    <field name="context">{}</field>
  </record>
</odoo>